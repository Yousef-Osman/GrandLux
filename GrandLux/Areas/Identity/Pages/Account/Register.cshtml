@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="container my-3">
    <div class="d-flex justify-content-center">
        <div class="col-lg-7 col-md-9 bg-white p-5 my-5 rounded custom-shadow">
            <h2 class="text-center mb-4 text-gray-700">@ViewData["Title"]</h2>
            <div class="d-flex justify-content-center">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="col-lg-12">
                    <div class="form-row mb-3">
                        <div class="col">
                            <input asp-for="Input.FirstName" class="form-control" placeholder="First name" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input asp-for="Input.LastName" class="form-control" placeholder="Last name" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row mb-3">
                        <div class="col">
                            <input asp-for="Input.Email" class="form-control" placeholder="E-mail" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row mb-3">
                        <div class="col">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row mb-3">
                        <div class="col">
                            <input asp-for="Input.Address" class="form-control" placeholder="Address" />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Register</button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
